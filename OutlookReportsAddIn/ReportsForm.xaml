<Window x:Class="OutlookReportsAddIn.ReportsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OutlookReportsAddIn"
             mc:Ignorable="d"             
             Title="{Binding Title}"
             MinHeight="450" 
             MinWidth="600"
             Height="450" 
             Width="800">

    <Grid>
        <DockPanel LastChildFill="False">
            <!--Main content -->
            <StackPanel DockPanel.Dock="Top">
                <!-- Datepicker -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"></ColumnDefinition>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DatePicker Margin="10 10"
                                Grid.Column="0"                                
                                VerticalAlignment="Center"
                                SelectedDate="{Binding SetDate}"
                                SelectedDateFormat="Short">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <!-- Generate datagrid for current date button -->
                    <Button  Margin="10 10"
                             Padding="5 5"
                             Grid.Column="1"
                             Content="Сформировать отчет"
                             Command="{Binding FetchItemsCommand}"
                             HorizontalAlignment="Center" />

                    <!-- Generate report button -->
                    <Button Margin="10 10"
                            Padding="5 5"
                            Grid.Column="2"
                            Content="Печать"
                            IsEnabled="{Binding HasItems}"
                            Command="{Binding CreateReportCommand}" />
                    
                    <!-- Template path -->
                    <TextBlock Margin="10 10"
                               Padding="5 5"
                               Grid.Column="3"                              
                               Text="{Binding TemplatePath}"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />

                    <!-- Set template button -->
                    <Button Margin="10 10"
                            Padding="5 5"
                            Grid.Column="4"
                            Content="Шаблон"
                            Command="{Binding SetTemplatePathCommand}" />                    
                </Grid>

                <Separator/>

                <StackPanel>
                    <!-- DataGrid -->
                    <TextBlock Margin="10 3" 
                               Text="{Binding SetDate, StringFormat='Письма за {0:dd.MM.yyyy}'}" />

                    <DataGrid Margin="10 5"                                  
                              ItemsSource="{Binding ItemsCollection}" 
                              AutoGenerateColumns="False" 
                              HorizontalGridLinesBrush="DarkGray"
                              RowBackground="LightGray" 
                              AlternatingRowBackground="White"
                              ScrollViewer.CanContentScroll="False"
                              CanUserAddRows="False"
                              Height="310">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Исх./Вход адрес" Binding="{Binding Path=SenderAddress}" Width="0.4*" />
                            <DataGridTextColumn Header="Фаил (КБ)" Binding="{Binding Path=Attachments}" Width="0.5*" />
                            <DataGridTextColumn Header="Категория" Binding="{Binding Path=Category}" Width="0.2*" />
                            <DataGridTextColumn Header="Время приемки/отправки" Binding="{Binding Path=Date}" Width="0.2*" />
                            <DataGridTextColumn Header="Кому(куда)" Binding="{Binding Path=RecivedAddress}" Width="0.4*" />
                            <DataGridTextColumn Header="Примечание" Binding="{Binding Path=Subject}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>

            <!--Status bar -->
            <StatusBar DockPanel.Dock="Bottom" 
                       Padding="10 3">
                <StatusBarItem>
                    <TextBlock Text="{Binding AddInCopyright}" />
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock Text="{Binding AddInCompany}" />
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock Text="{Binding AddInVersion}" />
                </StatusBarItem>
            </StatusBar>

        </DockPanel>

    </Grid>
</Window>
